<% if ! item.feed.logo.nil? %>
  <%= link_to_item_with_tracking(image_tag(item.feed.logo, :alt => item.feed.title, :size => "16x16", :class => "feed_favicon"), item) %>
<% else %>
  <%= link_to_item_with_tracking(image_tag("/assets/images/fauxvicon.gif", :alt => item.feed.title, :size => "16x16", :class => "feed_favicon"), item) %>
<% end %>
