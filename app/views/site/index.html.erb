<% if ! @run.nil? %>

<h1 id="logo">refinr <span class="faded"> / updated <%= time_ago_in_words(@run.ended_at) %> ago</span></h1>

<% cache(:action => "index", :run => @run.id, :flight => @flight.id) do %>
<%= render :partial => "site/partials/flights/#{@flight.partial_name}" %>
<% end # cache %>

<% else %>
<h1 id="logo">refinr</h1>
<p>refinr is offline and will return shortly.</p>
<% end %>

