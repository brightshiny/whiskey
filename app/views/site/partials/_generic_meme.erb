<div class="grid_<%= meme.number_of_columns %><% if meme.is_alpha == true %> alpha<% end %><% if meme.break_afterwards == true %> omega<% end %><% if defined?(extra_classes) %> <%= extra_classes %><% end %>">
  <div class="generic">
    <% if defined?(ignore_title_sizing) %>
    <h3 class="title" style="font-size: 300%;"><%= link_to_item_with_tracking widow_prevention(item.title), item %></h3>
    <% else %>
    <h3 class="title" style="font-size: <%= title_font_size(meme) %>;"><%= link_to_item_with_tracking widow_prevention(item.title), item %></h3>
    <% end %>
    <p class="excerpt">
      <strong class="byline"><% if ! item.author.nil? %><span class="author"><%= item.author %> &middot; </span><% end %><span class="website"><%= link_to_item_with_tracking item.feed.title, item %></span>, </strong>
      <% if ! meme.number_of_columns.nil? && meme.number_of_columns > SiteController::COLUMN_ZOOM_FACTOR %>
        <%= limit_text(:meme=>meme,:text=>item.content,:max_col_char_limit=>350) %>
      <% else %>
        <%= limit_text(:meme=>meme,:text=>item.content,:max_col_char_limit=>1000) %>
      <% end %>
      
      <% if current_user %>
        <%= meme_strength_trend(meme) %>
        <%= link_to "#", :action => :meme, :id => meme.id %>
      <% end %>
      
    </p>
  </div>
</div>
