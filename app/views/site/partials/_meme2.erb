<div class="grid_<%= meme.number_of_columns %><% if meme.is_alpha == true %> alpha<% end %><% if meme.break_afterwards == true %> omega<% end %><% if defined?(extra_classes) %> <%= extra_classes %><% end %>">
  <div class="generic">
    <h3 class="title" style="font-size: 100%;"><%= link_to_item_with_tracking widow_prevention(item.title), item %></h3>
    <p class="excerpt"><strong class="byline"><%= render :partial => "byline", :locals => { :item => item } %></strong></p>
    <p>Also<br /><% meme.distinct_meme_items.select{ |mi2| ! mi2.item.feed.logo.nil? }.each do |mi| %><%= link_to_item_with_tracking(image_tag(mi.item.feed.logo, :alt => mi.item.feed.title, :size => "16x16"), mi.item) %><% end %></p>
  </div>
</div>
