<div class="second_story">

  <h3 class="title" style="font-size: <%= title_font_size(meme) %>;"><%= link_to_item_with_tracking widow_prevention(item.title), item %></h3>  
  
  <div class="alternate_content grid_6 alpha">
    <div class="list_of_alternate_content">
      <ul>
      <% for alt_item in @items_by_meme[meme.id][1..2]%>
      <li><%= link_to_item_with_tracking widow_prevention(alt_item.title), alt_item %><br /><strong class="byline"><span class="website"><%= link_to_item_with_tracking alt_item.feed.title, alt_item %></span></strong></li>
      <% end %>
      </ul>
    </div>
  </div>
  
  <div class="grid_10 omega">
    <p class="excerpt">
      <strong class="byline"><% if ! item.author.nil? %><span class="author"><%= item.author %> &middot; </span><% end %><span class="website"><%= link_to_item_with_tracking item.feed.title, item %></span>, </strong>
	  <%= limit_text(:meme=>meme,:text=>item.content,:max_col_char_limit=>300) %>
	  <% if current_user %><%= link_to "#", :action => :meme, :id => meme.id %><% end %>
    </p>
  </div>
  
  <div class="clear"></div>
  
</div>
