<p><%= form.label :login %> <%= form.text_field :login %></p>
<p><%= form.label :email %> <%= form.text_field :email %></p>

<% unless form.object.new_record? %>

  <p><%= form.label :password, "Change password" %> <%= form.password_field :password %></p>
  <p><%= form.label :password_confirmation %> <%= form.password_field :password_confirmation %></p>
  
<% end %>