<h2>Edit your account</h2>

<% if current_user.nickname.nil? -%>
<p>Thanks for signing up.  Now just give us a nickname so we know what to call you.  Feel free to fill out any extra info while you're here.</p>
<% end %>

<% form_for current_user do |f| %>
  <%= f.error_messages %>
  
  <% if current_user.is_not_open_id? %>
  <p><%= f.label :login, "Login" %> <%= current_user.login %></p>
  <% else %>
  <p><%= f.label :identity_url, "Open ID URL" %> <%= f.text_field :identity_url %></p>
  <% end %>

  <p><%= f.label :nickname, 'Nickname' %> <%= f.text_field :nickname %> Required</p>
  <p><%= f.label :email, 'Email Address' %> <%= f.text_field :email %></p>
  <p><%= f.label :name, 'Full Name' %> <%= f.text_field :name %></p>
  
  <p><%= f.submit %></p>
<% end %>

